<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="MsmqTransportConfig" type="NServiceBus.Config.MsmqTransportConfig, NServiceBus.Core" />
  </configSections>

  <!-- in order to configure remote endpoints use the format:
       "queue@machine" 
  -->

  <MsmqTransportConfig
  InputQueue="hr"
  ErrorQueue="error"
  NumberOfWorkerThreads="1"
  MaxRetries="5"
  />

</configuration>
